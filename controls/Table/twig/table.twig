<table class="table table-sm table-striped table-bordered">
	{% if rows is not empty %}
	<tr>
		{% for field in rows[0].field %}
		{%   if field['@name'] !== 'PROJECT' and field['@name'] !== 'PROCESS' and field['@name'] !== 'AMIENTITYNAME' and field['@name'] !== 'AMIELEMENTID' %}
		{%     if fieldDescriptions.length > loop.index0 %}
		{%       set fieldDescription = fieldDescriptions[loop.index0] %}
		{%     else %}
		{%       set fieldDescription = /*---------*/ {} /*---------*/ %}
		{%     endif %}
		{%     if field['@name'] === primaryField %}
		<th class="text-center edit-mode">Tools</th>
		{%     else %}
		<th class="text-center">
			<a href="#" data-orderway="DESC" data-row="{{field['@name']}}"><i class="fa fa-chevron-down"></i></a>
			<span{% if fieldDescription['$'] and fieldDescription['$'] !== 'N/A' %} data-toggle="tooltip" data-title="{{fieldDescription['$']|escape}}"{% endif %}>{{field['@name']}}</span>
			<a href="#" data-orderway="ASC" data-row="{{field['@name']}}"><i class="fa fa-chevron-up"></i></a>
			<br />
			<a href="#" data-row="{{field['@name']}}"><i class="fa fa-search"></i></a>
			{% if fieldDescription['@type'] matches '/INT|FLOAT|DOUBLE|DECIMAL|NUMERIC/i' %}
			&nbsp;
			<a href="#" data-row="{{field['@name']}}"><i class="fa fa-bar-chart"></i></a>
			{% endif %}
			{% if fieldDescription['@groupable'] === 'true' %}
			&nbsp;
			<a href="#" data-row="{{field['@name']}}"><i class="fa fa-bars"></i></a>
			{% endif %}
		</th>
		{%     endif %}
		{%   endif %}
		{% endfor %}
	</tr>
	{%   for row in rows %}
	<tr>
		{% for field in row.field %}
		{%   if field['@name'] !== 'PROJECT' and field['@name'] !== 'PROCESS' and field['@name'] !== 'AMIENTITYNAME' and field['@name'] !== 'AMIELEMENTID' %}
		{%     if field['@name'] === primaryField %}
		{%       set elementId = field.$ %}
		<td class="text-center edit-mode">
			<a href="#" class="text-info" data-action="clone" data-row="{{elementId}}"><i class="fa fa-files-o"></i></a>
			&nbsp;
			<a href="#" class="text-danger" data-action="delete" data-row="{{elementId}}"><i class="fa fa-trash"></i></a>
		</td>
		{%     else %}
		<td>
			<span class="edit-field" data-row="{{elementId}}" data-col="{{field['@name']}}" placeholder="&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;">{{field.$}}</span>
		</td>
		{%     endif %}
		{%   endif %}
		{% endfor %}
	</tr>
	{%   endfor %}
	{% endif %}
</table>