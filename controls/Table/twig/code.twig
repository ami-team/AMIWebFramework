<script type="text/javascript" src="{{ORIGIN_URL}}/js/ami.min.js?embedded"></script>

<script type="text/javascript">

	var myTable;

	amiWebApp.onRefresh = function(isAuth) {

		if(isAuth)
		{
			myTable.render('#myTable', '{{command|e('js')}}', {
				enableCache: {{enableCache}},
				showDetails: {{showDetails}},
				showTools: {{showTools}},
				canEdit: {{canEdit}},
				catalog: '{{catalog|e('js')}}',
				entity: '{{entity|e('js')}}',
				primaryField: '{{primaryField|e('js')}}',
				rowset: '{{rowset|e('js')}}',
				start: {{start}},
				stop: {{stop}},
				orderBy: '{{orderBy|e('js')}}',
				orderWay: '{{orderWay|e('js')}}',
			});
		}
		else
		{
			$('#myTable').empty();
		}
	};

	amiWebApp.onReady = function() {

		return amiWebApp.loadResources(['ctrl:table']).done(function(ctrls) {

			myTable = new ctrls[0];
		});
	};

	amiWebApp.start({
		endpoint_url: '{{endpoint}}'
	});

</script>

<div class="clearfix">
	<div class="nav navbar-nav" id="ami_login_content"></div>
</div>

<div id="ami_alert_content"></div>

<div id="myTable"></div>