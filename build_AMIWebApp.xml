<?xml version="1.0"?>

<project name="AMIWebApp" default="compile_prod">

	<path id="execute-classpath">
		<fileset dir="." />
	</path>

	<filelist id="filelist" dir="js/AMI">
		<file name="AMIObjects.js" />
		<file name="AMIWebApp.js" />
		<file name="AMICommand.js" />
		<file name="AMILogin.js" />
	</filelist>

	<target name="compile_prod" description="Compile the project (prod mode).">

		<echo file="js/AMI/framework.js">&quot;use strict&quot;;${line.separator}${line.separator}</echo>

		<concat destfile="js/AMI/framework.js" append="true" fixlastline="true" encoding="UTF-8" outputencoding="UTF-8">
			<filelist refid="filelist" />
		</concat>

		<replace file="js/AMI/framework.js" token="'use strict';${line.separator}${line.separator}" value="" />
		<replace file="js/AMI/framework.js" token="'use strict';${line.separator}" value="" />

		<java classname="com.yahoo.platform.yui.compressor.YUICompressor" failonerror="true" fork="true">
			<classpath refid="execute-classpath" />
			<arg value="css/AMI/AMIWebApp.css" />
			<arg value="-o" />
			<arg value="css/AMI/AMIWebApp.min.css" />
		</java>

		<java classname="com.yahoo.platform.yui.compressor.YUICompressor" failonerror="true" fork="true">
			<classpath refid="execute-classpath" />
			<arg value="js/AMI/framework.js" />
			<arg value="-o" />
			<arg value="js/AMI/framework.min.js" />
		</java>

	</target>

	<target name="compile_debug" description="Compile the project (debug mode).">

		<echo file="js/AMI/framework.js">&quot;use strict&quot;;${line.separator}${line.separator}</echo>

		<concat destfile="js/AMI/framework.js" append="true" fixlastline="true" encoding="UTF-8" outputencoding="UTF-8">
			<filelist refid="filelist" />
		</concat>

		<replace file="js/AMI/framework.js" token="'use strict';${line.separator}${line.separator}" value="" />
		<replace file="js/AMI/framework.js" token="'use strict';${line.separator}" value="" />

		<copy file="css/AMI/AMIWebApp.css" tofile="css/AMI/AMIWebApp.min.css" overwrite="true" force="true" />
		<copy file="js/AMI/framework.js" tofile="js/AMI/framework.min.js" overwrite="true" force="true" />

	</target>

	<target name="clean" description="Clean the project.">

		<delete file="css/AMI/AMIWebApp.min.css" />
		<delete file="js/AMI/framework.min.js" />

	</target>

	<target name="lint_framework" description="Code quality.">

		<!-- npm install -g eslint -->
		<!-- http://eslint.org/ -->

		<exec executable="bash">
			<env key="PATH" value="/usr/local/bin:/usr/bin" />
			<arg value="-c" />
			<arg value="eslint js/AMI/framework.min.js" />
		</exec>

	</target>

	<target name="lint_subapp" description="Code quality.">

		<!-- npm install -g eslint -->
		<!-- http://eslint.org/ -->

		<exec executable="bash">
			<env key="PATH" value="/usr/local/bin:/usr/bin" />
			<arg value="-c" />
			<arg value="eslint subapps/**/js/*.js" />
		</exec>

	</target>

	<target name="doc" description="Generate doc.">

		<!-- npm install -g jsdoc -->
		<!-- http://usejsdoc.org/ -->

		<exec executable="bash">
			<env key="PATH" value="/usr/local/bin:/usr/bin" />
			<arg value="-c" />
			<arg value="jsdoc --template tools/jsdoc -d console js/AMI/AMIWebApp.js js/AMI/AMISubApp.js js/AMI/AMICommand.js js/AMI/AMILogin.js > js/AMI/api.min.json" />
		</exec>

	</target>

</project>
